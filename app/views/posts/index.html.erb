<h1>Listing posts</h1>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
        <td>
          <a href="#" data-xeditable="true" data-pk="<%= post.id %>" data-model="post" data-name="title" data-url="<%= post_url(post) %>" data-title="Post Title"><%= post.title %></a>
        </td>

      <td>
          <a href="#" data-xeditable="true" data-pk="<%= post.id %>" data-model="post" data-name="text" data-url="<%= post_url(post) %>" data-title="Post Text"><%= post.text %></a>
	  </td>
	  
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div>
  <p><%= link_to 'New Post', new_post_path %> | <%= link_to "Home", controller: "welcome" %></p>
</div>
